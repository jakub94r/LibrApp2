@model IEnumerable<LibrApp2.Models.UserProfile>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table id="userProfiles" class="table table-hover table-bordered">
    <thead class="bg-default">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            @if (User.IsInRole("Admin"))
            {
                <th class="col-md-2">Admin options</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Username, "Details", new { id = item.Id })
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#userProfiles").dataTable();
        });
    </script>
}