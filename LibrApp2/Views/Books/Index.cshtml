@model IEnumerable<LibrApp2.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>List of books</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class="btn btn-primary btn-sm" } )
</p>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Authors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Edit", new { id = item.Id }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatePublished)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    @String.Join(", ", item.Authors.Select(a => a.FullName).ToArray())
                </td>
                <td>
                    @Html.ActionLink("Add to bookshelf", "AddToBookshelf", new { id = item.Id })
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    @Html.ActionLink("Manage authors", "ShowAvailableAuthors", new { bookId = item.Id }, null)
                </td>
            </tr>

        }
    </tbody>
</table>
