@model LibrApp2.Models.Review

@{
    ViewBag.Title = "AddReview";
}
<h2>Add Review</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div>
    <h4>Your Review</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Rate)
        <div>
            @Html.DropDownListFor(model => model.Rate, Enumerable.Range(1, 10).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), null, new { style = "width: 7.5%;", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Content)
        <div>
            @Html.TextAreaFor(model => model.Content, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 50%;", @class = "form-control"})
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div>
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}